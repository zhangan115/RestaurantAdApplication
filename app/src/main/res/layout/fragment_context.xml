<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContextFragment">

    <ImageView
        android:id="@+id/iv_call_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_des_call_background"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:src="@drawable/app_home_bg" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/show_picture"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</FrameLayout>